<div class="container">

<% if current_admin %>
  <div class="row">

    <div class="col s3 offset-s10">
      <%= link_to "Add Item", new_item_path, class: "waves-effect waves-light btn black" %>
    </div>
  </div>
<% end %>

  <div class="row">
    <% @items.map do |item| %>
    <div class="col s4" style="background-image:url('<%= item.item_image.url(:medium) %>')">
      <p><%= item.title %></p>
      <p><%= item.description %></p>
      <p><%= item.price %></p>
    </div>
    <% end %>
  </div>
</div>
