<table>
  <th>Cart</th>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
  <% @cart_items.each do |i| %>
    <tr>
      <td class ="title"> <%= i.title %>
      <td class ="quantity">Quantity: <%= i.quantity %>
      <td class="Remove"><%= link_to "Remove", cart_items_path(item_id: i.id), method: :delete%></td>
    </tr>
  <% end %>
</table>
